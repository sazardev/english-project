<script>
  class SentenceConstructor {
    constructor(container) {
      this.container = container;
      this.currentExercise = 0;
      this.exercises = this.container.querySelectorAll(".exercise-card");
      this.totalExercises = this.exercises.length;
      this.score = 0;
      this.correctAnswers = 0;
      this.draggedElement = null;
      this.init();
    }

    init() {
      this.bindEvents();
      this.updateStats();
      this.initializeDragAndDrop();
    }

    bindEvents() {
      // Hint toggles
      this.container.addEventListener("click", (e) => {
        if (e.target.classList.contains("hint-toggle")) {
          this.toggleHint(e.target);
        }

        if (e.target.classList.contains("check-sentence-btn")) {
          this.checkSentence();
        }

        if (e.target.classList.contains("clear-sentence-btn")) {
          this.clearSentence();
        }

        if (e.target.classList.contains("show-answer-btn")) {
          this.showAnswer();
        }

        if (e.target.classList.contains("play-correct-btn")) {
          this.playCorrectSentence(e.target.dataset.sentence);
        }
      });

      // Navigation
      const prevBtn = this.container.querySelector(".prev-exercise-btn");
      const nextBtn = this.container.querySelector(".next-exercise-btn");
      const restartBtn = this.container.querySelector(".restart-game-btn");

      if (prevBtn) {
        prevBtn.addEventListener("click", () => this.previousExercise());
      }

      if (nextBtn) {
        nextBtn.addEventListener("click", () => this.nextExercise());
      }

      if (restartBtn) {
        restartBtn.addEventListener("click", () => this.restart());
      }
    }

    initializeDragAndDrop() {
      this.container.addEventListener("dragstart", (e) => {
        if (e.target.classList.contains("word-tile")) {
          this.draggedElement = e.target;
          e.target.classList.add("dragging");
        }
      });

      this.container.addEventListener("dragend", (e) => {
        if (e.target.classList.contains("word-tile")) {
          e.target.classList.remove("dragging");
          this.draggedElement = null;
        }
      });

      this.container.addEventListener("dragover", (e) => {
        e.preventDefault();
        if (e.target.classList.contains("word-slot")) {
          e.target.classList.add("drag-over");
        }
      });

      this.container.addEventListener("dragleave", (e) => {
        if (e.target.classList.contains("word-slot")) {
          e.target.classList.remove("drag-over");
        }
      });

      this.container.addEventListener("drop", (e) => {
        e.preventDefault();
        if (e.target.classList.contains("word-slot") && this.draggedElement) {
          this.handleDrop(e.target);
        }
      });
    }

    handleDrop(slot) {
      slot.classList.remove("drag-over");

      // If slot is already occupied, return the word to bank
      if (slot.classList.contains("occupied")) {
        const existingWord = slot.textContent.trim();
        this.returnWordToBank(existingWord);
      }

      // Place the new word
      slot.textContent = this.draggedElement.dataset.word;
      slot.classList.add("occupied");

      // Remove the word from the bank
      this.draggedElement.remove();
    }

    returnWordToBank(word) {
      const currentExercise = this.exercises[this.currentExercise];
      const wordBank = currentExercise.querySelector(".draggable-words");

      const wordTile = document.createElement("div");
      wordTile.className = "word-tile";
      wordTile.draggable = true;
      wordTile.dataset.word = word;
      wordTile.textContent = word;

      wordBank.appendChild(wordTile);
    }

    toggleHint(button) {
      const hintText = button.nextElementSibling;
      const isVisible = hintText.style.display !== "none";

      hintText.style.display = isVisible ? "none" : "block";
      button.textContent = isVisible ? "üí° Show Hint" : "üôà Hide Hint";
    }

    checkSentence() {
      const currentExercise = this.exercises[this.currentExercise];
      const slots = currentExercise.querySelectorAll(".word-slot");
      const correctSentence =
        currentExercise.querySelector(".draggable-words").dataset.sentence;

      const userSentence = Array.from(slots)
        .map((slot) =>
          slot.classList.contains("occupied") ? slot.textContent.trim() : ""
        )
        .filter((word) => word !== "")
        .join(" ");

      const isCorrect =
        userSentence.toLowerCase().trim() ===
        correctSentence.toLowerCase().trim();

      this.showResult(
        isCorrect,
        userSentence,
        correctSentence,
        currentExercise
      );

      if (isCorrect) {
        this.correctAnswers++;
        this.score += this.getDifficultyPoints();
      }

      this.updateStats();
    }

    getDifficultyPoints() {
      const currentExercise = this.exercises[this.currentExercise];
      const difficulty = currentExercise.dataset.difficulty;

      switch (difficulty) {
        case "easy":
          return 10;
        case "medium":
          return 20;
        case "hard":
          return 30;
        default:
          return 10;
      }
    }

    showResult(isCorrect, userSentence, correctSentence, exerciseElement) {
      const resultDiv = exerciseElement.querySelector(".exercise-result");
      const resultIcon = resultDiv.querySelector(".result-icon");
      const resultMessage = resultDiv.querySelector(".result-message");

      if (isCorrect) {
        resultIcon.textContent = "üéâ";
        resultMessage.textContent =
          "Perfect! You built the sentence correctly!";
        resultDiv.style.background = "rgba(34, 197, 94, 0.2)";
      } else {
        resultIcon.textContent = "‚ùå";
        resultMessage.textContent =
          "Not quite right. Try again or check the answer below.";
        resultDiv.style.background = "rgba(239, 68, 68, 0.2)";
      }

      resultDiv.style.display = "block";
      resultDiv.scrollIntoView({ behavior: "smooth" });
    }

    clearSentence() {
      const currentExercise = this.exercises[this.currentExercise];
      const slots = currentExercise.querySelectorAll(".word-slot");
      const wordBank = currentExercise.querySelector(".draggable-words");
      const originalSentence = wordBank.dataset.sentence;

      // Return all words to bank
      slots.forEach((slot) => {
        if (slot.classList.contains("occupied")) {
          const word = slot.textContent.trim();
          this.returnWordToBank(word);
          slot.textContent = "Drop word here";
          slot.classList.remove("occupied");
        }
      });

      // Hide result
      const resultDiv = currentExercise.querySelector(".exercise-result");
      resultDiv.style.display = "none";
    }

    showAnswer() {
      const currentExercise = this.exercises[this.currentExercise];
      const slots = currentExercise.querySelectorAll(".word-slot");
      const correctSentence =
        currentExercise.querySelector(".draggable-words").dataset.sentence;
      const words = correctSentence.split(" ");

      // Clear current sentence
      this.clearSentence();

      // Place correct words
      slots.forEach((slot, index) => {
        if (index < words.length) {
          slot.textContent = words[index];
          slot.classList.add("occupied");
        }
      });

      // Remove words from bank
      const wordBank = currentExercise.querySelector(".draggable-words");
      wordBank.innerHTML = "";

      // Show result as correct
      this.showResult(true, correctSentence, correctSentence, currentExercise);
    }

    playCorrectSentence(sentence) {
      if ("speechSynthesis" in window) {
        const utterance = new SpeechSynthesisUtterance(sentence);
        utterance.rate = 0.8;
        speechSynthesis.speak(utterance);
      }
    }

    nextExercise() {
      if (this.currentExercise < this.totalExercises - 1) {
        this.exercises[this.currentExercise].classList.remove("active");
        this.currentExercise++;
        this.exercises[this.currentExercise].classList.add("active");
        this.updateStats();
        this.updateNavigation();
      } else {
        this.showFinalResults();
      }
    }

    previousExercise() {
      if (this.currentExercise > 0) {
        this.exercises[this.currentExercise].classList.remove("active");
        this.currentExercise--;
        this.exercises[this.currentExercise].classList.add("active");
        this.updateStats();
        this.updateNavigation();
      }
    }

    updateNavigation() {
      const prevBtn = this.container.querySelector(".prev-exercise-btn");
      const nextBtn = this.container.querySelector(".next-exercise-btn");

      if (prevBtn) {
        prevBtn.disabled = this.currentExercise === 0;
      }

      if (nextBtn) {
        nextBtn.textContent =
          this.currentExercise === this.totalExercises - 1
            ? "Finish üèÅ"
            : "Next ‚û°Ô∏è";
      }
    }

    updateStats() {
      const currentSpan = this.container.querySelector("#current-exercise");
      const scoreSpan = this.container.querySelector("#score");

      if (currentSpan) currentSpan.textContent = this.currentExercise + 1;
      if (scoreSpan) scoreSpan.textContent = this.score;
    }

    showFinalResults() {
      const finalResults = this.container.querySelector(".final-results");
      const exerciseContainer = this.container.querySelector(
        ".exercise-container"
      );
      const navigationControls = this.container.querySelector(
        ".navigation-controls"
      );

      // Hide exercise interface
      exerciseContainer.style.display = "none";
      navigationControls.style.display = "none";

      // Update final stats
      const finalScore = this.container.querySelector("#final-score");
      const correctAnswers = this.container.querySelector("#correct-answers");
      const completionPercentage = this.container.querySelector(
        "#completion-percentage"
      );
      const achievementBadge =
        this.container.querySelector("#achievement-badge");

      if (finalScore) finalScore.textContent = this.score;
      if (correctAnswers) correctAnswers.textContent = this.correctAnswers;

      const percentage = Math.round(
        (this.correctAnswers / this.totalExercises) * 100
      );
      if (completionPercentage)
        completionPercentage.textContent = `${percentage}%`;

      // Show achievement badge for perfect score
      if (percentage === 100 && achievementBadge) {
        achievementBadge.style.display = "inline-block";
      }

      // Show final results
      finalResults.style.display = "block";
      finalResults.scrollIntoView({ behavior: "smooth" });
    }

    restart() {
      // Reset stats
      this.currentExercise = 0;
      this.score = 0;
      this.correctAnswers = 0;

      // Reset exercises
      this.exercises.forEach((exercise, index) => {
        exercise.classList.toggle("active", index === 0);

        // Reset word bank and slots
        const originalSentence =
          exercise.querySelector(".draggable-words").dataset.sentence;
        const words = originalSentence.split(" ");

        // Recreate word bank
        const wordBank = exercise.querySelector(".draggable-words");
        wordBank.innerHTML = "";
        words
          .sort(() => Math.random() - 0.5)
          .forEach((word, index) => {
            const wordTile = document.createElement("div");
            wordTile.className = "word-tile";
            wordTile.draggable = true;
            wordTile.dataset.word = word;
            wordTile.dataset.originalPosition = index;
            wordTile.textContent = word;
            wordBank.appendChild(wordTile);
          });

        // Reset slots
        const slots = exercise.querySelectorAll(".word-slot");
        slots.forEach((slot) => {
          slot.textContent = "Drop word here";
          slot.classList.remove("occupied");
        });

        // Hide results
        const resultDiv = exercise.querySelector(".exercise-result");
        resultDiv.style.display = "none";

        // Hide hints
        const hintText = exercise.querySelector(".hint-text");
        const hintToggle = exercise.querySelector(".hint-toggle");
        if (hintText) hintText.style.display = "none";
        if (hintToggle) hintToggle.textContent = "üí° Show Hint";
      });

      // Show exercise interface
      const finalResults = this.container.querySelector(".final-results");
      const exerciseContainer = this.container.querySelector(
        ".exercise-container"
      );
      const navigationControls = this.container.querySelector(
        ".navigation-controls"
      );

      finalResults.style.display = "none";
      exerciseContainer.style.display = "block";
      navigationControls.style.display = "flex";

      this.updateStats();
      this.updateNavigation();
    }
  }

  // Initialize all sentence constructor components
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".sentence-constructor").forEach((container) => {
      new SentenceConstructor(container);
    });
  });
</script>
