    margin-bottom: 1rem;
  }

  .code-snippet {
    background: var(--color-bg-secondary);
    padding: 1rem;
    border-radius: var(--radius);
    margin-bottom: 1rem;
    font-family: "Monaco", "Menlo", "Ubuntu Mono", monospace;
    font-size: 0.875rem;
  }

  .file-organization h2 {
    margin-bottom: 2rem;
    font-size: 2.5rem;
  }

  .file-structure {
    background: var(--color-bg);
    padding: 2rem;
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
  }

  .folder-structure {
    background: var(--color-bg-secondary);
    padding: 1.5rem;
    border-radius: var(--radius);
    margin: 1.5rem 0;
  }

  .folder-structure pre {
    margin: 0;
    background: transparent;
    border: none;
  }

  .naming-conventions {
    margin-top: 2rem;
  }

  .naming-conventions h3 {
    margin-bottom: 1rem;
  }

  .naming-conventions ul {
    padding-left: 1.5rem;
  }

  .naming-conventions li {
    margin-bottom: 0.5rem;
  }

  .naming-conventions code {
    background: var(--color-bg-secondary);
    padding: 0.125rem 0.25rem;
    border-radius: 3px;
  }

  .pull-request h2 {
    margin-bottom: 3rem;
    font-size: 2.5rem;
  }

  .pr-steps {
    display: grid;
    gap: 2rem;
  }

  .pr-step {
    background: var(--color-bg);
    padding: 2rem;
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
    border-left: 4px solid var(--color-primary);
  }

  .pr-step h3 {
    margin-bottom: 1rem;
  }

  .pr-step ul {
    margin: 0;
    padding-left: 1.5rem;
  }

  .pr-step li {
    margin-bottom: 0.5rem;
    color: var(--color-text-light);
  }

  .community-guidelines h2 {
    margin-bottom: 3rem;
    font-size: 2.5rem;
  }

  .guidelines-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .guideline {
    text-align: center;
    padding: 2rem;
    background: var(--color-bg);
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
  }

  .guideline h3 {
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .guideline p {
    color: var(--color-text-light);
    margin: 0;
  }

  .get-help h2 {
    margin-bottom: 3rem;
    font-size: 2.5rem;
    text-align: center;
  }

  .help-options {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .help-option {
    text-align: center;
    padding: 2rem;
    background: var(--color-bg);
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
    transition: all 0.2s ease;
  }

  .help-option:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .help-option h3 {
    margin-bottom: 1rem;
  }

  .help-option p {
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
  }

  @media (max-width: 768px) {
    .contribute-header h1 {
      font-size: 2.5rem;
    }

    .steps-grid,
    .component-examples,
    .levels-info,
    .guidelines-grid,
    .help-options {
      grid-template-columns: 1fr;
    }

    .contribute-content section {
      margin-bottom: 3rem;
    }
  }
</style>
